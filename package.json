{
  "name": "threejs-es6-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for Three.js projects set up with Babel for ES6 and compiled with webpack",
  "main": "app.js",
  "scripts": {
    "dev": "npm run webpack-server",
    "webpack-server": "cross-env NODE_ENV=development webpack-dev-server --progress --color --open --hot",
    "clean": "rimraf build",
    "copy": "copyfiles -u 1 \"public/**/*\" build",
    "build-js": "cross-env NODE_ENV=production webpack --progress --color",
    "build": "npm run clean && npm run copy && npm run build-js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/liiijz/threejs-es6-boilerplate.git"
  },
  "author": "Jianzhong Li",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/liiijz/threejs-es6-boilerplate/issues"
  },
  "homepage": "https://github.com/liiijz/threejs-es6-boilerplate#readme",
  "dependencies": {
    "es6-promise": "^4.2.4",
    "es6-promisify": "^6.0.1",
    "three": "^0.98.0",
    "three-fbxloader-offical": "^1.0.0",
    "three-obj-loader": "^1.1.3",
    "three-text2d": "^0.4.1",
    "tween.js": "^16.6.0",
    "util": "^0.11.1"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-transform-runtime": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/runtime": "^7.4.3",
    "babel-loader": "^8.0.5",
    "copyfiles": "^2.1.0",
    "cross-env": "^5.2.0",
    "rimraf": "^2.6.3",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.3.1"
  }
}